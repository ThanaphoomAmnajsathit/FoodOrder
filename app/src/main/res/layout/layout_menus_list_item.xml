<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_menu_detail"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="@drawable/ripple_green"
    app:cardBackgroundColor="@color/menus_background"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout_recyclerview_menus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_idfood"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kanit_light"
                android:gravity="left"
                android:text="IDfood"
                android:textColor="#51000000"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="43dp" />

            <TextView
                android:id="@+id/textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kanit"
                android:gravity="right"
                android:text="price"
                android:textColor="@color/orange_toolbar"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_bath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="à¸¿"
                android:textColor="@color/orange_toolbar"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_foodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/kanit"
            android:text="FoodName"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>